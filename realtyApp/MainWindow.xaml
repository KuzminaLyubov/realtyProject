<Window x:Name="Realty" x:Class="RealtyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealtyApp"
        mc:Ignorable="d"
        Title="Realty" Height="480" Width="640" MinWidth="320" MinHeight="240">
    <Window.Resources>
    </Window.Resources>

    <Grid>
        <DockPanel LastChildFill="True">
            <GroupBox DockPanel.Dock="Top" Header="Поиск" Padding="5">
                <DockPanel>
                    <Label DockPanel.Dock="Left">Поиск</Label>
                    <Button x:Name="_searchButton" DockPanel.Dock="Right" Margin="5,0,0,0">Искать</Button>
                    <TextBox x:Name="_searchTextBox" RenderTransformOrigin="0.5,0.5" Padding="0,4,0,0"></TextBox>
                </DockPanel>
            </GroupBox>
            <DockPanel DockPanel.Dock="Left">
                <StackPanel DockPanel.Dock="Left">
                <TextBlock FontWeight="Bold" Text="Список объектов недвижимости" />
                <ListBox x:Name="_realtyListBox" DisplayMemberPath="title"
                         ItemsSource="{Binding Source=Title}" Height="299">
                </ListBox>
                </StackPanel>
                <DataGrid DockPanel.Dock="Left" />
            </DockPanel>
        </DockPanel>
    </Grid>

</Window>
